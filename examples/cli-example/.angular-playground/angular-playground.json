{
    "sourceRoots": ["./src"],
    "angularCli": {
        "appName": "playground"
    },
    "viewportSizes": [
      {
        "width": 401,
        "height": 400
      },
      {
        "width": 1000,
        "height": 800
      }
    ],
    "imageSnapshotConfig": {
        "customDiffConfig": {
            "threshold": 0.1
        },
        "diffDirection": "vertical",
        "noColors": true
    },
    "visualRegressionIgnore": [
        {
            "regex": "app-feature1",
            "flags": "g"
        },
        {
            "regex": "app.+?shared.+?emoji"
        }
    ]
}
