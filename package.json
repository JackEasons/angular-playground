{
  "name": "angular-playground",
  "version": "6.2.0",
  "description": "A drop in app module for working on Angular components in isolation (aka Scenario Driven Development).",
  "typings": "dist/playground/public-api.d.ts",
  "bin": {
    "angular-playground": "dist/bin/index.js"
  },
  "files": [
    "dist",
    "projects/schematics"
  ],
  "jest": {
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testURL": "http://localhost"
  },
  "scripts": {
    "build": "rm -f -r dist && npm run playground:build && npm run cli:build && npm run schematics:build && npm run copy-jest-files",
    "playground:build": "ng build playground --prod",
    "ngcc": "ngcc -s dist/playground",
    "cli:build": "tsc -p ./projects/cli/tsconfig.json",
    "schematics:build": "tsc -p ./projects/schematics/tsconfig.json",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint": "tslint --project tsconfig.json",
    "copy-jest-files": "cd dist && mkdir jest && cd .. && cp projects/jest/src/* dist/jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SoCreate/angular-playground.git"
  },
  "keywords": [
    "angular"
  ],
  "author": {
    "name": "SoCreate",
    "url": "https://SoCreate.it"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SoCreate/angular-playground/issues"
  },
  "homepage": "http://www.angularplayground.it",
  "schematics": "./projects/schematics/src/collection.json",
  "peerDependencies": {
    "@angular/common": ">=9.0.0",
    "@angular/compiler": ">=9.0.0",
    "@angular/core": ">=9.0.0",
    "@angular/forms": ">=9.0.0",
    "@angular/platform-browser": ">=9.0.0",
    "@angular/platform-browser-dynamic": ">=9.0.0",
    "tslib": ">=1.10.0",
    "rxjs": ">=6.5.4",
    "zone.js": ">=0.10.2"
  },
  "dependencies": {
    "@angular-devkit/core": "^0.8.9",
    "@angular-devkit/schematics": "^0.8.9",
    "@jest/core": "^25.0.0",
    "@jest/types": "^25.0.0",
    "@schematics/angular": "^0.8.9",
    "async": "^3.0.1",
    "chalk": "^2.4.2",
    "commander": "^2.20.0",
    "get-port": "^5.0.0",
    "jest": "^25.0.0",
    "jest-image-snapshot": "^2.11.0",
    "jest-puppeteer": "^4.3.0",
    "mockdate": "^2.0.5",
    "node-watch": "^0.6.2",
    "puppeteer": "^1.20.0"
  },
  "devDependencies": {
    "@angular/common": "~9.0.2",
    "@angular/compiler": "~9.0.2",
    "@angular/core": "~9.0.2",
    "@angular/forms": "~9.0.2",
    "@angular/platform-browser": "~9.0.2",
    "@angular/platform-browser-dynamic": "~9.0.2",
    "@angular-devkit/build-angular": "~0.900.3",
    "@angular-devkit/build-ng-packagr": "~0.900.3",
    "@angular/cli": "~9.0.3",
    "@angular/compiler-cli": "~9.0.2",
    "@angular/language-service": "~9.0.2",
    "@types/node": "^12.11.1",
    "@types/jest": "^24.0.18",
    "@types/puppeteer": "^1.20.0",
    "codelyzer": "^5.1.2",
    "rxjs": "~6.5.4",
    "ng-packagr": "^9.0.0",
    "tslib": "^1.10.0",
    "ts-node": "~8.3.0",
    "tslint": "~5.18.0",
    "typescript": "~3.7.5",
    "zone.js": "~0.10.2"
  }
}
